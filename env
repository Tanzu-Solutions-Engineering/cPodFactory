#!/bin/bash
#bdereims@vmware.com

DNSMASQ=/etc/dnsmasq.conf
HOSTS=/etc/hosts

WHERE=$( ip addr show eth1 | grep inet | head -1 | awk '{print $2}' )

WHERE_OVH=$( ip addr show eth0 | grep inet | head -1 | awk '{print $2}' )
if [ "${WHERE_OVH}" == "172.17.111.170/16" ]; then
	WHERE="172.17.111.169/16"
fi

WHERE_MAD=$( ip addr show eth0 | grep inet | head -1 | awk '{print $2}' )

ADDRIP=$( ip addr show eth0 | grep inet | head -1 | awk '{print $2}' | sed 's/\/.*$//' )
export ADDRIP

case $WHERE in
	"172.16.100.50/22")
		ALL_CLUSTER=(lab)
		;;
	"172.16.100.20/22")
		ALL_CLUSTER=(fkd)
		;;
	"164.132.217.50/28")
		ALL_CLUSTER=(ovh)
		;;
	"172.17.111.169/16")
		ALL_CLUSTER=(techdata)
		;;
	"10.202.121.120/24")
		ALL_CLUSTER=(stc)
		;;
	"10.197.96.201/24")
		ALL_CLUSTER=(wdc)
		;;
	"172.16.100.155/24")
		ALL_CLUSTER=(lhr)
		;;
esac

case $WHERE_MAD in
        "10.10.35.30/24")
                ALL_CLUSTER=(mad) 
                ;;
esac

#for CLUSTER in ${ALL_CLUSTER[@]}; do
#        RESULT=$( ./extra/check_datastore.sh ${CLUSTER} )
#        if [ "${RESULT}" == "Ok!" ]; then
#                break
#        fi
#done

ENV=$CLUSTER
if [[ ! ${CLUSTER} ]]; then
	ENV=${ALL_CLUSTER[0]}
fi
	ENV=${ALL_CLUSTER[0]}

source env-${ENV}
